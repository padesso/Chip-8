<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:Chip8.Avalonia"
        x:Class="Chip8.Avalonia.MainWindow"
        Title="Chip-8 Emulator"
        Width="700"
        Height="430"
        CanResize="False"
        KeyDown="Window_KeyDown"
        KeyUp="Window_KeyUp">
  <DockPanel>
    <Menu DockPanel.Dock="Top">
      <MenuItem Header="_File">
        <MenuItem Header="_Open Program" Click="OpenProgram_Click"/>
        <MenuItem Header="_Quit" Click="Quit_Click"/>
      </MenuItem>
    </Menu>

    <Border Background="Black" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center">
      <local:Chip8DisplayControl x:Name="Display"
                                 Width="640"
                                 Height="320" />
    </Border>
  </DockPanel>
</Window>
